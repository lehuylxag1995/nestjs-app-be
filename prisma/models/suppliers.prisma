model Supplier {
    id            String  @id @default(uuid())
    name          String
    //Thông tin liên hệ:
    contactPerson String?
    email         String? @unique
    phone         String?
    address       String?

    //Thông tin tài chính:
    taxId       String? @unique
    bankName    String?
    bankAccount String?

    //Thông tin khác
    note      String?
    isActive  Boolean  @default(true)
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    PurcharsOrders PurcharsOrder[]

    @@index([taxId])
    @@map("Suppliers")
}
